<Page x:Class="SecuBot.GUI.Page5"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecuBot.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Cybersecurity Quiz - Result"
      Background="#F0F2F5">

    <Grid>
        <Border Background="White"
                CornerRadius="20"
                Padding="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="600">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="5" Opacity="0.2"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <!-- 🎯 Result Header -->
                <TextBlock x:Name="ResultText"
                           FontSize="28"
                           FontWeight="Bold"
                           TextAlignment="Center"
                           Foreground="#2D2D2D"
                           Margin="0 0 0 20"/>

                <!-- 💬 Result Message -->
                <TextBlock x:Name="MessageText"
                           FontSize="18"
                           FontWeight="Normal"
                           TextAlignment="Center"
                           Foreground="#555"
                           TextWrapping="Wrap"
                           Margin="0 0 0 30"/>

                <!-- 🔘 Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 10">
                    <Button Content="🔄 Play Again"
            Width="160"
            Height="45"
            Background="#28A745"
            Foreground="White"
            FontSize="16"
            FontWeight="Bold"
            Cursor="Hand"
            BorderBrush="{x:Null}"
            Click="PlayAgain_Click"
            Margin="0 0 15 0"/>
                    <!-- Adds spacing to the right -->

                    <Button Content="💬 Back to Chat"
            Width="160"
            Height="45"
            Background="#FF3B30"
            Foreground="White"
            FontSize="16"
            FontWeight="Bold"
            Cursor="Hand"
            BorderBrush="{x:Null}"
            Click="ExitGame_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>

