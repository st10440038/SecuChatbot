<Page x:Class="SecuBot.GUI.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SecuBot.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="Cybersecurity Quiz">

    <Grid Background="#F0F2F5">
        <Border Margin="40"
                Padding="30"
                Background="White"
                CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="12" Opacity="0.15" ShadowDepth="4"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 🔢 Question Number -->
                <TextBlock x:Name="QuestionNumberText"
                           Grid.Row="0"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           Margin="0 0 0 10"/>

                <!-- ❓ Question Text -->
                <TextBlock x:Name="QuestionText"
                           Grid.Row="1"
                           TextWrapping="Wrap"
                           FontSize="18"
                           Foreground="#333"
                           Margin="0 0 0 20"/>

                <!-- ✅ Answers -->
                <StackPanel x:Name="AnswersPanel"
                            Grid.Row="2"
                            Margin="0 0 0 20">
                    <!-- Dynamically generated answer choices go here -->
                </StackPanel>

                <!-- Feedback Area -->
                <Border Grid.Row="3"
        Background="#EDF9F0"
        BorderBrush="#C4E2CA"
        BorderThickness="1"
        CornerRadius="8"
        Padding="10"
        Margin="0 0 0 20"
        Visibility="Collapsed"
        x:Name="FeedbackBorder">
                    <TextBlock x:Name="FeedbackText"
               FontSize="14"
               FontWeight="Bold"
               Foreground="#2E7D32"
               TextAlignment="Center"/>
                </Border>

                <!-- 🔘 Next Button -->
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 0 0 10">
                    <Button x:Name="NextButton"
                            Content="Next Question"
                            Width="180"
                            Height="45"
                            Click="NextButton_Click"
                            IsEnabled="False"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White"
                            Background="#007ACC"
                            BorderBrush="{x:Null}"
                            Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#007ACC"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="8"
                                                    Padding="10">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2196F3"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>

                <!-- 🏁 Final Score (optional, hidden at first) -->
                <TextBlock x:Name="FinalScoreText"
                           Grid.Row="5"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#444"
                           TextAlignment="Center"
                           Visibility="Collapsed"
                           Margin="0 10 0 0"/>
            </Grid>
        </Border>
    </Grid>
</Page>
